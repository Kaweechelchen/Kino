  <body>

    <div class="container">
      <!-- Codrops top bar -->
      <div class="main">

        <ul id="og-grid" class="og-grid">

          {% for movieId, screening in screenings %}

            <li>
              <a name="{{ movieId }}" data-largesrc="/scrape/img/lg_{{ movieId }}.jpg" data-title="{{ movies[movieId].title }}" data-description="
              {{ movies[movieId].synopsis }}<br /><br />

                {% set tomorrow = false %}

                {% for time, cinemaId in screening %}

                  {% if not tomorrow %}
                    {% if time|date("z") != "now"|date("z") %}
                      <br />Tomorrow:<br />
                      {% set tomorrow = true %}
                    {% endif %}
                  {% endif %}

                  {{ time|date("H:i") }} - {{ cinemas[cinemaId] }}<br />

                {% endfor %}
              ">
                <img src="/scrape/img/{{ movieId }}.jpg" width="110">
              </a>
            </li>

          {% endfor %}

        </ul>
      </div>

      <footer>
        <p>Made with <img class="emoji" src="img/heart.png" draggable="false" alt="â™¥" title="Red heart" aria-label="Emoji: Red heart"> on a laptop</p>
      </footer>
    </div> <!-- /container -->


